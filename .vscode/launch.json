{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Launch Package",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "cwd": "${workspaceRoot}",
            "program": "cmd/flexlb-server/main.go",
            "args": [
                "--config-file=conf/flex-api-config.yaml"
            ],
            "env": {
                "HOST": "localhost",
                "PORT": "8080",
                "TLS_HOST": "localhost",
                "TLS_PORT": "8443",
                "TLS_CERTIFICATE": "/tmp/certs/server.crt",
                "TLS_PRIVATE_KEY": "/tmp/certs/server.key",
                "TLS_CA_CERTIFICATE": "/tmp/certs/ca.crt"
            }
        }
    ]
}